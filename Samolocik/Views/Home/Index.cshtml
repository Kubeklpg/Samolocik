@{
    ViewData["Title"] = "Logowanie";
}

<div class="text-center">
    <h1 class="display-4 mt-4">Witamy na platformie Samolocik</h1>
    <img class="logo" src="samolocik.png" />
    
    <form name="login-form" method="POST" asp-controller="Home" asp-action="SubmitAction">
        <h2>Zaloguj się</h2>
        <input type="text" name="login" class="form-control mt-1 w-50" style="min-width:300px" placeholder="Login"/>
        <input type="password" name="pass" class="form-control mt-1 w-50" style="min-width:300px" placeholder="Hasło"/>
        <button class="btn btn-primary my-3" type="submit">Zaloguj</button>
    </form>
</div>
